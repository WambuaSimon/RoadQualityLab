<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="@string/thresholds"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/dlg_thresholds_divider_header"
        android:layout_below="@+id/dlg_thresholds_header_title"
        android:layout_centerHorizontal="true"
        android:background="@color/dialog_divider" />

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_08_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="0.8G"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dlg_thresholds_header_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlg_thresholds_divider_value"
        android:background="@drawable/default_divider_list"
        android:layout_alignBottom="@+id/dlg_thresholds_08_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_10_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="1.0G"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dlg_thresholds_08_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlg_thresholds_10_divider_value"
        android:background="@drawable/default_divider_list"
        android:layout_alignBottom="@+id/dlg_thresholds_10_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_12_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="1.2G"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dlg_thresholds_10_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlg_thresholds_15_divider_value"
        android:background="@drawable/default_divider_list"
        android:layout_alignBottom="@+id/dlg_thresholds_12_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_15_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="1.5G"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dlg_thresholds_12_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlg_thresholds_20_divider_value"
        android:background="@drawable/default_divider_list"
        android:layout_alignBottom="@+id/dlg_thresholds_15_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.softteco.roadqualitydetector.view.TypefaceTextView
        android:id="@+id/dlg_thresholds_20_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font="@string/font_roboto_regular"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="2.0G"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/dlg_thresholds_15_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>